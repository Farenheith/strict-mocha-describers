{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "build",
      "lib": [
        "es2017",
        "dom",
      ],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "types": ["mocha", "sinon", "chai", "sinon-chai"]
    },
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ]
  }
  